# Production environment variables template
# Copy this file to .env and fill in the values

# ========================
# Database Configuration
# ========================
DB_HOST=postgres
DB_PORT=5432
DB_NAME=avalanche_edna
DB_USER=avalanche
DB_PASSWORD=CHANGE_THIS_PASSWORD

# ========================
# Redis Configuration
# ========================
REDIS_URL=redis://redis:6379/0

# ========================
# Application Settings
# ========================
ENVIRONMENT=production
LOG_LEVEL=INFO
SECRET_KEY=CHANGE_THIS_TO_RANDOM_SECRET_KEY

# ========================
# Session & Authentication
# ========================
SESSION_TIMEOUT=3600
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION=900

# ========================
# Security Settings
# ========================
MAX_FILE_SIZE_MB=100
ALLOWED_EXTENSIONS=.fasta,.fastq,.zip,.csv,.txt,.json
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_UPLOADS_PER_HOUR=10

# ========================
# Monitoring (Optional)
# ========================
SENTRY_DSN=
PROMETHEUS_ENABLED=false

# ========================
# Backup Configuration
# ========================
BACKUP_ENABLED=true
BACKUP_S3_BUCKET=
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1

# ========================
# Volume Paths (for docker-compose.prod.yml)
# ========================
DATA_VOLUME_PATH=./data
ANALYSIS_OUTPUTS_PATH=./analysis_outputs
REFERENCE_PATH=./reference
LOGS_PATH=./logs
