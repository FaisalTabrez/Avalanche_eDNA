# Production environment variables template
# Copy this file to .env and fill in the values

# ========================
# Database Configuration
# ========================
# Database type: sqlite or postgresql
DB_TYPE=postgresql

# SQLite Configuration (for development)
SQLITE_PATH=data/avalanche.db

# PostgreSQL Configuration (for production)
DB_HOST=postgres
DB_PORT=5432
DB_NAME=avalanche_edna
DB_USER=avalanche
DB_PASSWORD=CHANGE_THIS_PASSWORD

# Connection Pool Settings
DB_POOL_MIN=2
DB_POOL_MAX=20
DB_POOL_TIMEOUT=30

# Retry Configuration
DB_MAX_RETRIES=3
DB_RETRY_DELAY=1

# ========================
# Redis Configuration
# ========================
REDIS_URL=redis://redis:6379/0

# ========================
# Application Settings
# ========================
ENVIRONMENT=production
LOG_LEVEL=INFO
SECRET_KEY=CHANGE_THIS_TO_RANDOM_SECRET_KEY

# ========================
# Session & Authentication
# ========================
SESSION_TIMEOUT=3600
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION=900

# ========================
# Security Settings
# ========================
MAX_FILE_SIZE_MB=100
ALLOWED_EXTENSIONS=.fasta,.fastq,.zip,.csv,.txt,.json
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_UPLOADS_PER_HOUR=10

# ========================
# Monitoring (Optional)
# ========================
SENTRY_DSN=
PROMETHEUS_ENABLED=false

# ========================
# Backup Configuration
# ========================
# Enable automated backups
BACKUP_ENABLED=true

# Cloud storage for backups
BACKUP_CLOUD_ENABLED=false
BACKUP_CLOUD_PROVIDER=s3  # Options: s3, azure, gcs, local

# AWS S3 Backup Configuration
BACKUP_S3_BUCKET=avalanche-backups
BACKUP_S3_PREFIX=production/
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1

# Azure Blob Backup Configuration
BACKUP_AZURE_CONTAINER=avalanche-backups
BACKUP_AZURE_PREFIX=production/
AZURE_STORAGE_CONNECTION_STRING=

# Google Cloud Storage Backup Configuration
BACKUP_GCS_BUCKET=avalanche-backups
BACKUP_GCS_PREFIX=production/
GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account-key.json
GOOGLE_CLOUD_PROJECT=

# Backup Retention (days/weeks/months)
BACKUP_RETENTION_DAILY=7
BACKUP_RETENTION_WEEKLY=4
BACKUP_RETENTION_MONTHLY=12

# Backup Notifications
BACKUP_NOTIFICATIONS_ENABLED=false
BACKUP_SMTP_HOST=smtp.gmail.com
BACKUP_SMTP_PORT=587
BACKUP_SMTP_USER=
BACKUP_SMTP_PASSWORD=
BACKUP_FROM_EMAIL=
BACKUP_TO_EMAILS=admin@example.com

# ========================
# Volume Paths (for docker-compose.prod.yml)
# ========================
DATA_VOLUME_PATH=./data
ANALYSIS_OUTPUTS_PATH=./analysis_outputs
REFERENCE_PATH=./reference
LOGS_PATH=./logs
